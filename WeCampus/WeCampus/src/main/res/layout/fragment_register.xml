<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    android:paddingTop="15dp"
    android:paddingRight="4dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rege_title"
                android:layout_gravity="center_horizontal"
                android:id="@id/rege_title"
                style="@style/RegisterTitle" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@id/ly_rege"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/rege_school"
                        android:gravity="center"
                        android:layout_weight="1"
                        style="@style/RegisterTextView" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@id/rege_edt_school"
                        android:layout_weight="3"
                        android:background="#00000000"
                        android:hint="@string/rege_choose_school"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.3dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:background="@color/divider_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/rege_email"
                        android:gravity="center"
                        android:layout_weight="1"
                        style="@style/RegisterTextView" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@id/rege_edt_email"
                        android:layout_weight="3"
                        android:background="#00000000"
                        android:hint="@string/input_tips"
                        android:inputType="textEmailAddress"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.3dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:background="@color/divider_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/rege_pwd"
                        android:gravity="center"
                        android:layout_weight="1"
                        style="@style/RegisterTextView" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@id/rege_edt_pwd"
                        android:layout_weight="3"
                        android:background="#00000000"
                        android:hint="@string/input_tips"
                        android:inputType="textPassword"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.3dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:background="@color/divider_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/rege_nickname"
                        android:gravity="center"
                        android:layout_weight="1"
                        style="@style/RegisterTextView" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@id/rege_edt_nickname"
                        android:layout_weight="3"
                        android:background="#00000000"
                        android:hint="@string/rege_nickname_tips"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.3dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:background="@color/divider_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/rege_sex"
                        android:gravity="center"
                        android:layout_weight="1"
                        style="@style/RegisterTextView" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@id/rege_edt_sex"
                        android:layout_weight="3"
                        android:background="#00000000"
                        android:hint="@string/rege_choose_school"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rege_submit"
                android:id="@id/rege_btn_register"
                android:layout_marginTop="15dp"
                android:background="@color/login_btn_bg"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/rege_tips_one"
                android:id="@id/rege_tips_one"
                android:layout_marginTop="15dp"
                android:textColor="@color/rege_title_color"
                style="@style/RegisterTips" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/rege_tips_two"
                android:id="@id/rege_tips_two"
                android:layout_marginTop="2dp"
                android:textColor="@color/rege_tips_two_bg"
                style="@style/RegisterTips" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>