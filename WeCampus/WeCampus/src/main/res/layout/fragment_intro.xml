<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@id/intro_viewpager_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="72dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/intro_bg"
            android:contentDescription="@string/imageDescription" />

        <android.support.v4.view.ViewPager
            android:id="@id/intro_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/vp_indicator_selected" />

        <com.viewpagerindicator.UnderlinePageIndicator
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@id/intro_viewpager_indicator"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            app:selectedColor="@color/vp_indicator_selected" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@id/intro_no_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/access_without_login"
            android:textSize="18sp"
            android:textColor="@color/text_color_white"
            android:background="@drawable/btn_selectable_background_we" />

        <Button
            android:id="@id/intro_login_sign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="26dp"
            android:text="@string/login_sign"
            android:textSize="18sp"
            android:textColor="@color/text_color_white"
            android:background="@drawable/intro_btn_selectable_bg_we" />

    </LinearLayout>

</RelativeLayout>