<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="3.3dp"
        android:layout_marginRight="3.3dp"
        android:orientation="vertical"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:text="@string/admin"
            style="@style/OrgSectionTitle"/>

        <TextView
            android:id="@+id/org_name"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/OrgSectionText"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="3.3dp"
        android:layout_marginRight="3.3dp"
        android:layout_marginTop="9dp"
        android:orientation="vertical"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="18dp"
            android:text="@string/org_intro"
            style="@style/OrgSectionTitle"/>

        <TextView
            android:id="@+id/org_intro"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/OrgSectionText"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_contact_with_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3.3dp"
        android:layout_marginRight="3.3dp"
        android:layout_marginTop="10dp"
        android:background="@color/login_btn_bg"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:focusable="false"
        android:text="@string/contact_with_mail"/>

</LinearLayout>