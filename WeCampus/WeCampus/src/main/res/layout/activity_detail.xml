<?xml version="1.0" encoding="utf-8"?>
<com.westudio.wecampus.ui.view.ScrollViewWithVP
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@id/detail_viewpager_container"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true">

            <android.support.v4.view.ViewPager
                android:id="@id/detail_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/vp_indicator_selected" />

            <com.viewpagerindicator.UnderlinePageIndicator
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@id/detail_viewpager_indicator"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"
                app:selectedColor="@color/vp_indicator_selected" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_viewpager_container">

            <TextView
                android:id="@id/detail_tv_organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="WeCampus团队"
                android:drawableLeft="@drawable/detail_organization"
                android:drawablePadding="7dp"
                style="@style/DetailTextOrg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_tv_organization"
                android:id="@id/detail_tv_title"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:text="普华永道中天会计事务所(特殊普通入伙)招聘宣讲会"
                style="@style/DetailTextTitle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/detail_tv_time"
                android:layout_below="@id/detail_tv_title"
                android:text="9:00-11:00 9/21"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/detail_time"
                android:drawablePadding="5dp"
                style="@style/DetailTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/detail_tv_location"
                android:layout_below="@id/detail_tv_time"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="同济大学四平路校区"
                android:drawableLeft="@drawable/detail_location"
                android:drawablePadding="5dp"
                style="@style/DetailTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/detail_tv_like"
                android:layout_below="@id/detail_tv_location"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="12"
                android:drawableLeft="@drawable/detail_like"
                android:drawablePadding="5dp"
                style="@style/DetailTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/detail_tv_read"
                android:layout_below="@id/detail_tv_location"
                android:layout_toRightOf="@id/detail_tv_like"
                android:layout_alignTop="@id/detail_tv_like"
                android:layout_marginLeft="25dp"
                android:text="288"
                android:drawableLeft="@drawable/detail_read"
                android:drawablePadding="5dp"
                style="@style/DetailTextView" />

            <Button
                android:id="@id/detail_btn_attent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_btn_attent"
                android:layout_below="@id/detail_tv_location"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/detail_btn_bg"
                android:textColor="@color/rege_title_color"
                android:textSize="8sp" />

            <View
                android:id="@id/detail_divider_one"
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:layout_below="@id/detail_btn_attent"
                android:layout_marginTop="10dp"
                android:background="@color/divider_bg" />

            <TextView
                android:id="@id/detail_tv_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_divider_one"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="可以在xxx领票"
                android:drawableLeft="@drawable/detail_ticket"
                android:drawablePadding="5dp"
                style="@style/DetailTextTicket"/>

            <View
                android:id="@id/detail_divider_two"
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:layout_below="@id/detail_tv_ticket"
                android:background="@color/divider_bg" />

            <RelativeLayout
                android:id="@id/detail_rl_org"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/detail_divider_two">

                <TextView
                    android:id="@id/detail_tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="可口可乐公司"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawableLeft="@drawable/detail_company"
                    android:drawablePadding="5dp"
                    style="@style/DetailTextTicket" />

                <ImageView
                    android:id="@id/detail_img_pointer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/detail_pointer"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/imageDescription" />

            </RelativeLayout>

            <View
                android:id="@id/detail_divider_three"
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:layout_below="@id/detail_rl_org"
                android:background="@color/divider_bg" />

            <TextView
                android:id="@id/detail_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_world"
                android:layout_below="@id/detail_divider_three"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                style="@style/DetailTextContent" />

        </RelativeLayout>

    </RelativeLayout>

</com.westudio.wecampus.ui.view.ScrollViewWithVP>