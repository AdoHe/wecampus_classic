<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invite_wx_friends"
    android:layout_width="match_parent"
    android:layout_height="66.7dp"
    android:minHeight="66.7dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@android:color/white">

    <ImageView
        android:src="@drawable/ic_user_invite"
        android:layout_width="41.6dp"
        android:layout_height="41.6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="17.3sp"
        android:text="@string/invite_wx_friends"/>

</LinearLayout>
