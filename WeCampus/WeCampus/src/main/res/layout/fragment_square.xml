<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- Search bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--com.actionbarsherlock.widget.SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.actionbarsherlock.widget.SearchView-->

            </RelativeLayout>

            <!-- Banner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/banner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/banner2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/banner3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <!-- All kinds of activities -->
            <TextView
                android:text="@string/all_kinds_of_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"/>
            <!-- entertainment -->
            <RelativeLayout
                android:id="@+id/section_entertainment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/square_section_height"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:background="@drawable/square_section_background">

                <View
                    android:layout_width="@dimen/square_color_mark_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="#ea4140"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="18dp"
                    android:layout_centerVertical="true"
                    android:text="@string/section_entertainment"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:layout_alignParentRight="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="2dp"
                    android:background="@color/menu_list_divider"/>

            </RelativeLayout>
            <!-- lecture -->
            <RelativeLayout
                android:id="@+id/section_lecture"
                android:layout_width="match_parent"
                android:layout_height="@dimen/square_section_height"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:background="@drawable/square_section_background">

                <View
                    android:layout_width="@dimen/square_color_mark_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="#29a18a"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="18dp"
                    android:layout_centerVertical="true"
                    android:text="@string/section_lecture"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:layout_alignParentRight="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="2dp"
                    android:background="@color/menu_list_divider"/>

            </RelativeLayout>
            <!-- contest -->
            <RelativeLayout
                android:id="@+id/section_contest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/square_section_height"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:background="@drawable/square_section_background">

                <View
                    android:layout_width="@dimen/square_color_mark_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="#e77e23"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="18dp"
                    android:layout_centerVertical="true"
                    android:text="@string/section_contest"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:layout_alignParentRight="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="2dp"
                    android:background="@color/menu_list_divider"/>

            </RelativeLayout>
            <!-- recruiting -->
            <RelativeLayout
                android:id="@+id/section_recruiting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/square_section_height"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:background="@drawable/square_section_background">

                <View
                    android:layout_width="@dimen/square_color_mark_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="#157efb"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="18dp"
                    android:layout_centerVertical="true"
                    android:text="@string/section_recruiting"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:layout_alignParentRight="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="2dp"
                    android:background="@color/menu_list_divider"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>