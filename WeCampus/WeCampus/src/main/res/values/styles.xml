<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ActivityTagStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LoginTextView">
        <item name="android:textColor">@color/login_textview_bg</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RegisterTextView">
        <item name="android:textColor">@color/login_textview_bg</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="RegisterEditTextHint">
        <item name="android:textColor">@color/rege_title_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RegisterTitle" parent="RegisterEditTextHint">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="RegisterTitleTwo" parent="RegisterEditTextHint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RegisterTips">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ForgetPwdTextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/rege_title_color</item>
    </style>

    <style name="DetailTextView">
        <item name="android:textColor">@color/rege_title_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DetailTextOrg" parent="DetailTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/login_textview_bg</item>
    </style>

    <style name="DetailTextTitle">
        <item name="android:textColor">@color/login_textview_bg</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DetailTextTicket">
        <item name="android:textColor">@color/detail_ticket</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="DetailTextContent">
        <item name="android:textColor">@color/detail_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="DetailTextPartTitle">
        <item name="android:textColor">@color/rege_title_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailBottomText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HomePageTextPrimary">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="HomePageTextSecondary">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ActivityListTitle">
        <item name="android:textColor">@color/login_textview_bg</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15.5sp</item>
    </style>

    <style name="ActivityListTextView">
        <item name="android:textColor">@color/rege_title_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ActivityListSummary">
        <item name="android:textColor">@color/login_textview_bg</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12.5sp</item>
    </style>

    <style name="OrgSectionTitle">
        <item name="android:textColor">#3e454d</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="OrgSectionText" parent="@style/OrgSectionTitle">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
